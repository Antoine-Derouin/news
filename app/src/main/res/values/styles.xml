<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="colorPrimary">#1e88e5</item>
        <item name="colorPrimaryContainer">#1e88e5</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>
        <item name="colorPrimaryInverse">#1e88e5</item>

        <item name="colorSecondary">#1e88e5</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Bottom navigation -> Icon attributes -> Color (active) -->
        <item name="colorOnSecondaryContainer">#1e88e5</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?colorSurface</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>