<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/topOffset"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clickableArea"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/topOffset"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/primaryText"
            android:layout_width="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/actions"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Primary text"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/secondaryText"
            android:layout_width="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/primaryText"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/actions"
            tools:text="Secondary text"
            android:textAppearance="?attr/textAppearanceCaption" />

        <TextView
            android:id="@+id/errorText"
            android:layout_width="0dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/secondaryText"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/actions"
            tools:text="Secondary text"
            android:textColor="?colorError"
            android:textAppearance="?attr/textAppearanceCaption" />

        <ImageView
            android:id="@+id/actions"
            android:layout_width="32dp"
            android:contentDescription="@string/actions"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottomOffset"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>
